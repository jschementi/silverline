    body {
        background-color: #333;
        color: white;
        text-align: center;
        padding: 100px;
    }
    a {
        color: white;
        text-decoration: none;
        padding: 10px;
        font-size: 50px;
    }
    a:hover {
        background-color: #444;
        color: white;
    }
