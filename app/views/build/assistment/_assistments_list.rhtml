<div id="assistment_list">
<% if @assistments.empty? %>
    <div class="warning_message">
        There are no Assistments; you can create one with the "Create new assistment" link above.
    </div>
<% else %>
	<table id="assistments" border="0" cellpadding="0" cellspacing="0">
		<%= render :partial => "assistment", :collection => @assistments %>
	</table>
<% end %>
</div>