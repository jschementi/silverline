<% form_remote_tag :url => {
		:controller => "hint", :action => 'update', :id => @hint 
	} do
-%>
	<%= render :partial => "form" %>
	<div class="actions" style="position: relative; bottom: 0px">
		<%= submit_tag "Save Hint", {:class => "submit button"} %> or
		<%= link_to_remote "Cancel", { 
				:url => { :controller => "hint", :action => "restore", :id => @hint }
			}, {:style => "float: none"} 
		%>
	</div>
<% end -%>
